<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="350dp"
    android:background="#00555555"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:padding="5dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_layout_otp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="horizontal"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/photo_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:src="@color/WHITE"
                    app:srcCompat="@drawable/background_black" />
                <ProgressBar
                    android:id="@+id/progresinphoto"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"/>

                <TextView
                    android:id="@+id/photo_ques"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:text="Do you wanna Exit..?"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="30"
            android:background="@drawable/round_layout_white_otp"
            android:orientation="horizontal"
            android:weightSum="5000">


            <LinearLayout
                android:id="@+id/LL_yes"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20px"
                android:layout_marginLeft="20px"
                android:layout_weight="700"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/facility_ok"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/checked_white"/>
                <TextView
                    android:id="@+id/facility_ok_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_no"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1100"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/facility_nope"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/cancel_white"/>
                <TextView
                    android:id="@+id/facility_nope_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_not_sure"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="500"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/facility_neutral"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/not_sure_white"/>
                <TextView
                    android:id="@+id/facility_neutral_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOT SURE"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>