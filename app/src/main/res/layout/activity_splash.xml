<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GREY_5"
    tools:context="com.lplus.activities.activities.SplashActivity">

    <TextView
        android:id="@+id/tv_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Locate Plus"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/BLACK" />

    <ProgressBar
        android:id="@+id/pb_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_splash"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_splash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Registering App...."
        android:textColor="@color/BLACK"
        android:textSize="15dp"
        android:textStyle="italic" />

</RelativeLayout>
