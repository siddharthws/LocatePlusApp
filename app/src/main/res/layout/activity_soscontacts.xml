<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lplus.activities.activities.SOSContactsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/navy_blue"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/ll_1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact 1: "
        android:textSize="20dp"
        android:layout_weight="1"
        android:textStyle="italic"/>

    <EditText
        android:hint="Enter Contact Number"
        android:layout_weight="20"
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/tv_1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_marginTop="30dp"
        android:layout_below="@id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact 2: "
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_below="@id/tv_1"
        android:layout_gravity="center"
        android:layout_weight="1"/>

        <EditText
            android:hint="Enter Contact Number"
            android:id="@+id/et_2"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_toRightOf="@id/tv_2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_marginTop="30dp"
        android:layout_below="@id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact 3: "
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_below="@id/tv_2"
        android:layout_weight="1"/>

        <EditText
            android:hint="Enter Contact Number"
            android:id="@+id/et_3"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_toRightOf="@id/tv_3"/>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/bt"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/navy_blue"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
